<RegistrationScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: "Registrazione"
            font_size: '24sp'
            size_hint_y: None
            height: self.texture_size[1] + 20

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: confirm_password
            hint_text: "Conferma Password"
            password: True
            multiline: False
            size_hint_y: None
            height: 40

        Button:
            text: "Registra nuovo utente"
            size_hint_y: None
            height: 40
            on_release: root.register_user()
