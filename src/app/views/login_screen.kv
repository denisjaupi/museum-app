<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Login'
            font_size: '36sp'
            size_hint_y: None
            height: self.texture_size[1] + 20
            color: 0, 0, 0, 1

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            size_hint_y: None
            height: 60

        # Etichetta per visualizzare l'errore del nome utente
        Label:
            id: username_error
            text: ""
            font_size: '14sp'
            color: 1, 0, 0, 1  # Red color for error
            size_hint_y: None
            height: 30
            opacity: 0  # Initially hidden

        TextInput:
            id: password
            hint_text: "Password"
            password: True
            multiline: False
            size_hint_y: None
            height: 60

        # Etichetta per visualizzare l'errore della password
        Label:
            id: password_error
            text: ""
            font_size: '14sp'
            color: 1, 0, 0, 1  # Red color for error
            size_hint_y: None
            height: 30
            opacity: 0  # Initially hidden

        Button:
            text: "Entra"
            size_hint_y: None
            height: 60
            background_normal: ''
            background_color: 0.447, 0.106, 0.157, 1
            on_release: root.login_user()

        Button:
            text: "Registrati"
            size_hint_y: None
            height: 60
            background_normal: ''
            background_color: 0.447, 0.106, 0.157, 1
            on_release: app.root.current = 'registrazione'  # Passa alla schermata di registrazione

        Button:
            text: "Indietro"
            size_hint_y: None
            height: 60
            background_normal: ''
            background_color: [0.9, 0.9, 0.9, 1]
            on_release: app.root.current = 'benvenuto'  # Passa alla schermata di benvenuto
