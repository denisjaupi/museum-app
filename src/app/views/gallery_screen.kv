<GalleryScreen>:

    BoxLayout:
        orientation: 'vertical'

###################################################################
        
        # Header - 20% dello spazio totale (con 3 sezioni interne)
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            # Canvas per impostare lo sfondo bianco dell'header
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Sezione logo (30%)
            HeaderWidget:
                id: header_widget  # Aggiungi l'ID per riferimento




###################################################################


        # Box centrale (bianca)
        BoxLayout:
            size_hint_y: 0.6
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # BoxLabel per Ispeziona e Back Button
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.2  # Riserva solo 20% dell'altezza totale
                padding: [20]

                # Colonna sinistra per il Back Button
                BoxLayout:
                    size_hint_x: 0.075  # 8.5% dello spazio orizzontale
                    orientation: 'horizontal'

                    Button:
                        text: 'Back'
                        on_release: app.root.current = 'benvenuto'  # Cambia a welcome_screen
                        size_hint: (1, 1)  # Riempi tutto lo spazio disponibile
                        background_normal: ''
                        background_color: [0.9, 0.9, 0.9, 1]
                        padding: [20, 20]  # Maggior padding

                Widget:
                    size_hint_x: None  # Imposta size_hint_x a None per controllare la larghezza
                    width: 20 

                # Colonna destra per la Label Ispeziona
                BoxLayout:
                    size_hint_x: 0.825  # 81.5% dello spazio orizzontale
                    orientation: 'horizontal'

                    Label:
                        text: 'Ispeziona'
                        font_size: 64
                        color: [0.447, 0.106, 0.157, 1]
                        halign: 'left'
                        valign: 'center'
                        text_size: self.size
                        size_hint: (1, 1)  # Riempi tutto lo spazio disponibile

            # Layout principale con pulsanti laterali e griglia centrale
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.8
                padding: [20]

                # Bottone per scorrere a sinistra
                ScrollButton:
                    text: '<'  # Usa l'icona di freccia o sostituisci con immagine
                    on_release: root.scroll_left()
                    size_hint: 0.1, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    padding: [20, 20]  # Maggior padding

                # Layout griglia con card
                GridLayout:
                    id: card_grid
                    cols: 3
                    spacing: 20
                    padding: [20, 0, 20, 0]

                # Bottone per scorrere a destra
                ScrollButton:
                    text: '>'
                    on_release: root.scroll_right()
                    size_hint: 0.1, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    padding: [20, 20]  # Maggior padding

###################################################################

        # Footer
        FooterField:
            id: footer
            size_hint_y: 0.2
