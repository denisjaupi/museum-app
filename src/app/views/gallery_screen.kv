<GalleryScreen>:
    BoxLayout:
        orientation: 'vertical'

###################################################################
        
        # Header - 20% dello spazio totale (con 3 sezioni interne)
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            # Canvas per impostare lo sfondo bianco dell'header
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Sezione logo (30%)
            HeaderWidget:
                id: header_widget  # Aggiungi l'ID per riferimento




###################################################################


        # Box centrale (bianca)
        BoxLayout:
            size_hint_y: 0.6
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            Label:
                text: 'Ispeziona'
                font_size: 64
                color: [0.447, 0.106, 0.157, 1]
                size_hint_y: 0.2
                halign: 'center'
                valign: 'top'
                text_size: self.size

            # Layout principale con pulsanti laterali e griglia centrale
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.8
                padding: [20]

                # Bottone per scorrere a sinistra
                ScrollButton:
                    text: '<'  # Usa l'icona di freccia o sostituisci con immagine
                    on_release: root.scroll_left()
                    size_hint: 0.1, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    padding: [20, 20]  # Maggior padding

                # Layout griglia con card
                GridLayout:
                    id: card_grid
                    cols: 3
                    spacing: 20
                    padding: [20, 0, 20, 0]

                # Bottone per scorrere a destra
                ScrollButton:
                    text: '>'
                    on_release: root.scroll_right()
                    size_hint: 0.1, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    padding: [20, 20]  # Maggior padding

###################################################################


        # Footer
        FooterField:
            id: footer_text
            size_hint_y: 0.2