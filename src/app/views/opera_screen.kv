<OperaScreen>:
    viewer: opera_scatter
    footer_field: footer_field

    BoxLayout:

        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Bianco
            Rectangle:
                pos: self.pos
                size: self.size

        # Sezione immagine (75% dello schermo)
        BoxLayout:
            id: main_box
            size_hint_y: 0.7
            padding: 10
            orientation: 'horizontal'

            BoxLayout:
                id: left_box
                size_hint_x: 0.2

            # Usiamo RelativeLayout per centrare l'OperaImageViewer e per le annotazioni
            RelativeLayout:
                id: image_box
                size_hint_x: 0.6

                # Inseriamo direttamente OperaImageViewer nel RelativeLayout
                OperaImageViewer:
                    id: opera_scatter
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    size_hint: None, None # Lasciamo che si adatti alle dimensioni dell'immagine
            
            BoxLayout:
                id: right_box
                size_hint_x: 0.2
        

        BoxLayout:
            id: button_box
            size_hint_y: 0.1
            padding: 10
            orientation: 'horizontal'
            
            BoxLayout:
                id: leftButt_box
                size_hint_x: 0.2
                
                Button:
                    text: 'Back'
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/AbrilFatface-Regular.ttf'
                    halign: 'center'
                    valign: 'middle'
                    color: 0, 0, 0, 1
                    background_normal: ''
                    padding: 10
                    background_color: [0.9, 0.9, 0.9, 1]
                    on_release: app.root.current = 'galleria'

            BoxLayout:
                id: backButt_box
                size_hint_x: 0.3
                padding: 10

                Button:
                    text: '<'
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/NotoSansSymbols-Black.ttf'
                    halign: 'center'
                    valign: 'middle'
                    color: 0, 0, 0, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    on_release: root.show_previous_image()

            BoxLayout:
                id: infoButt_box
                size_hint_x: 0.3
                padding: 10

                Button:
                    text: '>'
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/NotoSansSymbols-Black.ttf'
                    halign: 'center'
                    valign: 'middle'
                    color: 0, 0, 0, 1
                    background_normal: ''
                    padding: 10
                    background_color: [0.9, 0.9, 0.9, 1]
                    on_release: root.show_next_image()
            
            BoxLayout:
                id: rightButt_box
                size_hint_x: 0.2
                
                Button:
                    id: info_butt
                    text: 'Info'
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/AbrilFatface-Regular.ttf'
                    halign: 'center'
                    valign: 'middle'
                    color: 0, 0, 0, 1
                    background_normal: ''
                    background_color: [0.9, 0.9, 0.9, 1]
                    on_release: root.on_info_button_press()
        
        # Footer (20% dello schermo)
        FooterField:
            id: footer_field
            size_hint_y: 0.2