<OperaScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Sezione immagine (80% dello schermo)
        BoxLayout:
            id: main_box
            size_hint_y: 0.8
            padding: 10
            orientation: 'horizontal'
            
            BoxLayout:
                id: left_box
                size_hint_x: 0.2
                
            # Usiamo RelativeLayout per centrare l'OperaImageViewer
            RelativeLayout:
                id: image_box
                size_hint_x: 0.6
            
                OperaImageViewer:
                    id: opera_scatter
                    # Rimuoviamo size_hint_x poiché verrà gestito nel codice Python
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    
            BoxLayout:
                id: right_box
                size_hint_x: 0.2
        
        # Footer (20% dello schermo)
        FooterField:
            id: footer_field
            size_hint_y: 0.2