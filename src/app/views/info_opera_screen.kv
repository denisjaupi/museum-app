<InfoOperaScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Bianco
            Rectangle:
                pos: self.pos
                size: self.size

        
        BoxLayout:
            id: main_box
            size_hint_y: 0.75
            orientation: 'horizontal'
            background_color: [1, 1, 1, 1]  # Sfondo bianco

            BoxLayout:
                orientation: 'vertical'
                padding: [10, 10, 10, 10]  # Margini interni

                Image:
                    id: image_box
                    size_hint_y: 0.7  # Maggior spazio per l'immagine
                    allow_stretch: True
                    keep_ratio: True

                Label:
                    id: title_label
                    text: 'Titolo:'
                    size_hint_y: 0.1
                    color: 0.5, 0.0, 0.1, 1  # Bordeaux per il testo
                    font_size: '18sp'

                Label:
                    id: title_box
                    text: 'Titolo dell\'opera'
                    size_hint_y: 0.1
                    color: 0.5, 0.0, 0.1, 1  # Bordeaux per il testo
                    font_size: '16sp'
                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1  # Sfondo grigio chiaro
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    
                Label:
                    id: author_label
                    text: 'Autore:'
                    size_hint_y: 0.1
                    color: 0, 0, 0, 1
                    font_size: '18sp'

                Label:
                    id: author_box
                    text: 'Nome dell\'autore'
                    size_hint_y: 0.1
                    color: 0, 0, 0, 1
                    font_size: '16sp'
                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1  # Sfondo grigio chiaro
                        Rectangle:
                            pos: self.pos
                            size: self.size

            BoxLayout:
                orientation: 'vertical'
                padding: [10, 10, 10, 10]

                Label:
                    size_hint_y: 0.2
                    text: 'Descrizione dell\'opera'
                    color: 0.5, 0.0, 0.1, 1  # Bordeaux per il testo
                    font_size: '18sp'

                ScrollView:
                    size_hint_y: 0.8

                    Label:
                        id: description_box
                        text: 'Descrizione completa dell\'opera'
                        size_hint_y: None
                        color: 0, 0, 0, 1  # Testo nero per contrasto
                        font_size: '16sp'
                        text_size: self.width, None  # Permette il wrapping del testo in base alla larghezza
                        halign: 'left'               # Allineamento orizzontale a sinistra
                        valign: 'top'                # Allineamento verticale in alto
                        height: self.texture_size[1]  # Altezza dinamica basata sul testo
                        padding_y: 10                 # Spazio superiore per evitare che tocchi i margini
                        canvas.before:
                            Color:
                                rgba: 0.9, 0.9, 0.9, 1  # Sfondo grigio chiaro
                            Rectangle:
                                pos: self.pos
                                size: self.size

        BoxLayout:
            size_hint_y: 0.1
            padding: [10, 10, 10, 10]
            orientation: 'horizontal'

            BoxLayout:
                size_hint_x: 0.3

            Button:
                id: back_butt
                size_hint_x: 0.3
                text: 'Back'
                font_size: self.height * 0.4
                halign: 'center'
                valign: 'middle'
                size_hint_x: 0.3  # Bottone pi√π piccolo
                pos_hint: {'x': 0, 'y': 0}  # Allineato in basso a sinistra
                background_normal: ''
                background_color: [0.9, 0.9, 0.9, 1] # Sfondo bordeaux
                color: 1, 1, 1, 1  # Testo bianco
                on_release: root.on_back_button_press()

            BoxLayout:
                size_hint_x: 0.3

        FooterField:
            id: footer_field
            size_hint_y: 0.15




