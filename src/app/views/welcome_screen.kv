# welcome_screen.kv
<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'

        ###################################################################
        # Header Section - Logo, Login Button, and Language Spinner

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Logo Section (30%)
            BoxLayout:
                size_hint_x: 0.3
                orientation: 'horizontal'
                padding: [20, 20, 20, 20]

                Image:
                    source: 'images/operas/logo/IMG_Logo.png'
                    allow_stretch: True
                    keep_ratio: True

                BoxLayout:
                    size_hint_x: 1  # Spacer

            # Central Section (30%) - Empty space for centering purposes
            BoxLayout:
                size_hint_x: 0.4

            # Login Button Section (30%)
            BoxLayout:
                size_hint_x: 0.3
                orientation: 'horizontal'
                padding: [20, 20, 20, 20]

                Button:
                    text: 'Login'
                    size_hint_x: None
                    font_size: 20
                    color: 1, 1, 1, 1  # White text
                    background_color: 0.447, 0.106, 0.157, 1  # Bordeaux background
                    background_normal: ''  # Remove default background
                    background_down: ''
                    on_release: app.root.current = 'login'  # Navigate to login screen

            # Language Selection Section (30%)
            BoxLayout:
                size_hint_x: 0.2
                orientation: 'horizontal'
                padding: [20, 20, 20, 20]


                Spinner:
                    text: 'IT'  # Default language
                    values: ['IT', 'EN']  # Available languages
                    size_hint_x: None
                    
                    width: 100
                    height: 50
                    font_size: 20
                    color: 1, 1, 1, 1  # White text
                    background_color: 0.447, 0.106, 0.157, 1  # Bordeaux background
                    background_normal: ''  # Remove default background
                    background_down: ''

        ###################################################################
        # Main Grid Section - 60% of the screen

        GridLayout:
            id: main_grid
            size_hint_y: 0.6
            cols: 1
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

        ###################################################################
        # Footer Section - 20% of the screen

        BoxLayout:
            size_hint_y: 0.2
            padding: [self.width * 0.3, self.height * 0.2]

            # Bordeaux background for the footer
            canvas.before:
                Color:
                    rgba: [0.447, 0.106, 0.157, 1]  # Bordeaux color
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Inizia la visita!'
                font_size: self.height * 0.4
                halign: 'center'
                valign: 'middle'
                background_color: 1, 1, 1, 1  # White background
                color: 0, 0, 0, 1  # Black text
                background_normal: ''  # Remove default background
                on_release: app.root.current = 'galleria'  # Navigate to gallery screen
