<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'

###################################################################
        
        # Header - 20% dello spazio totale (con 3 sezioni interne)
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            # Canvas per impostare lo sfondo bianco dell'header
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Sezione logo (30%)
            HeaderWidget:
                id: header_widget  # Aggiungi l'ID per riferimento




###################################################################

        # Grid principale - 60% dello spazio
        GridLayout:
            id: main_grid
            size_hint_y: 0.6
            cols: 1
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
                    
###################################################################

        # Footer - 20% dello spazio totale 
        BoxLayout:
            size_hint_y: 0.2
            padding: [self.width * 0.3, self.height * 0.2]

            # Imposta lo sfondo bordeaux per l'intero Footer
            canvas.before:
                Color:
                    rgba: [0.447, 0.106, 0.157, 1]  # Bordeaux
                Rectangle:
                    pos: self.pos
                    size: self.size
                    

            Button:
                text: 'Inizia la visita!'
                font_size: self.height * 0.4
                halign: 'center'
                valign: 'middle'
                background_color: 1, 1, 1, 1  # Sfondo bianco
                color: 0, 0, 0, 1  # Testo nero
                background_normal: ''  # Rimuove l'immagine di sfondo predefinita
                on_release: app.root.current = 'galleria'
