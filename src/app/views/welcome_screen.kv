<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'

###################################################################
        
        # Header - 20% dello spazio totale (con 3 sezioni interne)
        BoxLayout:
            size_hint_y: 0.2
            orientation: 'horizontal'

            # Canvas per impostare lo sfondo bianco dell'header
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            # Sezione logo (30%)
            BoxLayout:
                size_hint_x: 0.3
                Image:
                    source: 'utils/IMG_Test3.png'  
                    allow_stretch: True
                    keep_ratio: True

            # Sezione centrale (60%)
            BoxLayout:
                size_hint_x: 0.6


            # Sezione scelta lingua (10%)
            BoxLayout:
                size_hint_x: 0.1
                orientation: 'horizontal'
                padding: [self.height * 0.2]

                # Spinner per la selezione della lingua
                Spinner:
                    text: 'IT'  # Imposta la lingua predefinita
                    values: ['IT', 'EN', 'FR', 'DE']  # Le lingue selezionabili
                    size_hint_x: None
                    width: 100
                    font_size: 20

                    # Imposta il colore del testo e lo sfondo del Spinner
                    color: [1, 1, 1, 1]  # Testo bianco
                    background_color: [0.447, 0.106, 0.157, 1]  # Sfondo Bordeaux 

                    # Sfondo del Spinner in stato normale e premuto
                    background_normal: ''  # Rimuove lo sfondo normale
                    background_down: ''  # Rimuove lo sfondo quando Ã¨ premuto



###################################################################

        # Grid principale - 60% dello spazio
        GridLayout:
            size_hint_y: 0.6
            cols: 2
            spacing: 10

            # Impostiamo lo sfondo bianco con canvas
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # Bianco
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Colonna di sinistra (testo)
            BoxLayout:
                orientation: 'vertical'
                padding: [self.width * 0.2, self.height * 0.3]
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # Sfondo bianco anche per la colonna
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Label:
                    text: 'Il primo palazzo dei Medici, dove vissero Cosimo il Vecchio e Lorenzo il Magnifico e lavorarono artisti come Donatello, Michelangelo, Paolo Uccello, Benozzo Gozzoli e Botticelli'
                    font_size: 24
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.width, None  # Fa andare il testo a capo quando raggiunge il bordo
                    size_hint_y: None
                    height: self.texture_size[1] + 20
                    color: [0, 0, 0, 1]  # Testo nero

                Label:
                    text: 'Dove tutto ebbe inizio.'
                    font_size: 30
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1] + 20
                    color: [0, 0, 0, 1]  # Testo nero

            # Colonna di destra (immagine)
            Image:
                source: 'utils/IMG_Test2.png'  
                allow_stretch: True
                keep_ratio: True

###################################################################

        # Footer - 20% dello spazio totale 
        BoxLayout:
            size_hint_y: 0.2
            padding: [self.width * 0.3, self.height * 0.2]

            # Imposta lo sfondo bordeaux per l'intero Footer
            canvas.before:
                Color:
                    rgba: [0.447, 0.106, 0.157, 1]  # Bordeaux
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Inizia la visita!'
                font_size: 24
                halign: 'center'
                valign: 'middle'
                background_color: 1, 1, 1, 1  # Sfondo bianco
                color: 0, 0, 0, 1  # Testo nero
                background_normal: ''  # Rimuove l'immagine di sfondo predefinita
                on_release: app.root.current = 'galleria'
