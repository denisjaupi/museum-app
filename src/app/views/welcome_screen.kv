# welcome_screen.kv
<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'

        ###################################################################
        # Header Section - Logo, Login Button, and Language Spinner

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Logo Section (30%)
            BoxLayout:
                size_hint_x: 0.2
                padding: [0, 20, 0, 0]

                Image:
                    source: 'images/operas/first_view_images/IMG_Logo.png'
                    allow_stretch: True
                    keep_ratio: True
                    


            # Central Section (30%) - Empty space for centering purposes
            BoxLayout:
                size_hint_x: 0.6

            # Login Button Section (30%)
            BoxLayout:
                size_hint_x: 0.2
                orientation: 'horizontal'
                spacing: 20
                padding: 20

                Button:
                    text: 'LOGIN'
                    size_hint_x: 0.5
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/AbrilFatface-Regular.ttf'
                    color: 1, 1, 1, 1  # White text
                    background_color: 0.447, 0.106, 0.157, 1  # Bordeaux background
                    background_normal: ''  # Remove default background
                    background_down: ''
                    on_release: app.root.current = 'login'  # Navigate to login screen


                Spinner:
                    text: 'IT'  # Default language
                    font_size: self.height * 0.4
                    font_name: 'src/app/utils/AbrilFatface-Regular.ttf'
                    values: ['IT', 'EN']  # Available languages
                    size_hint_x: 0.5
                    width: 100
                    height: 50
                    color: 1, 1, 1, 1  # White text
                    background_color: 0.447, 0.106, 0.157, 1  # Bordeaux background
                    background_normal: ''  # Remove default background
                    background_down: ''

        ###################################################################
        # Main Grid Section - 60% of the screen

        BoxLayout:
            id: main_grid
            size_hint_y: 0.7
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint_x: 0.5
                orientation: 'vertical'

                GIFImage:
                    size_hint_y: 0.4
                    gif_path: 'src/app/images/operas/first_view_images/FingerPointer.gif'
                    allow_stretch: True
                    keep_ratio: True

                GIFImage:
                    size_hint_y: 0.6
                    gif_path: 'src/app/images/operas/first_view_images/IMG_Testo.png'
                    allow_stretch: True
                    keep_ratio: True

            BoxLayout:
                size_hint_x: 0.5

                Image:
                    source: 'src/app/images/operas/first_view_images/IMG_Design.png'
                    allow_stretch: True
                    keep_ratio: True

        ###################################################################
        # Footer Section - 20% of the screen

        BoxLayout:
            size_hint_y: 0.2
            padding: [self.width * 0.3, self.height * 0.2]

            # Bordeaux background for the footer
            canvas.before:
                Color:
                    rgba: [0.447, 0.106, 0.157, 1]  # Bordeaux color
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: 'Inizia la visita!'
                font_size: self.height * 0.4
                font_name: 'src/app/utils/AbrilFatface-Regular.ttf'
                halign: 'center'
                valign: 'middle'
                background_color: [0.9, 0.9, 0.9, 1]  # White background
                color: [0, 0, 0, 1]   # Black text
                background_normal: ''  # Remove default background
                on_release:
                    app.root.transition.direction = 'left'
                    app.root.current = 'galleria'
