FROM python:3.11-slim

# Setta la working directory
WORKDIR /app

# Copia solo i file necessari
COPY ../../ai/dataset/ /app/ai/dataset/
COPY ../../ai/requirements.txt /app/ai/

# Installa le dipendenze
RUN pip install --no-cache-dir -r ai/requirements.txt

# Esegue lo script
CMD ["python", "/app/dataset/data_collection.py"]
